<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.memories.requestlist.RequestListFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRequsetList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_request_list_shimmer"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sfl_sample"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />

            <include layout="@layout/row_request_list_shimmer" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>