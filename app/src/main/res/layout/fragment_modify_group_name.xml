<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.mypages.modifygroupname.ModifyGroupNameFragment">


    <!-- Toolbar -->


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarModifyGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="true"
        app:titleTextAppearance="@style/CustomToolbarTitle"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modifyGroupNameTextField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="그룹명"
        android:textColorHint="@color/material_dynamic_neutral60"
        app:boxStrokeColor="@color/material_dynamic_neutral60"
        app:cursorColor="@color/black"
        app:hintTextColor="@color/material_dynamic_neutral60"
        app:endIconMode="clear_text"
        app:helperText=" "
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarModifyGroupName">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modifyGroupNameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_btn_background"
        android:enabled="true"
        android:text="변경하기"
        android:textColor="@drawable/custom_btn_text"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>