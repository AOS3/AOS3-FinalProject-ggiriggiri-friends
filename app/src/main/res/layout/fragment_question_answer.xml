<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.memories.questionanswer.QuestionAnswerFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbQuestionAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subtitleTextAppearance="@style/CustomToolbarTitle"
        app:titleCentered="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivQuestionAnswerImogi"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="70dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvQuestionAnswerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=" "
                android:textAlignment="center"
                android:textAppearance="@style/CustomTextRegular" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuestionAnswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>