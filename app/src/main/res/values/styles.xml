<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nanumsquareextrabold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextRegular" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nanumsquareregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextBold" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nanumsquarebold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 텍스트 색상 상태별로 지정 -->
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <!-- 아이콘 색상 상태별로 지정 -->
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>




</resources>